<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blue"
        android:id="@+id/buttonBlue"
        android:layout_marginTop="44dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/buttonRed" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Red"
        android:id="@+id/buttonRed"
        android:layout_below="@+id/buttonBlue"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="141dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Green"
        android:id="@+id/buttonGreen"
        android:layout_below="@+id/buttonRed"
        android:layout_alignStart="@+id/buttonRed"
        android:layout_marginTop="105dp" />

    <fragment
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:name="com.example.charlesmaten.fragmentassignement.BlueFragment"
        android:id="@+id/fragment"
        android:layout_below="@+id/buttonBlue"
        android:layout_centerHorizontal="true"
        tools:layout="@layout/activity_blue_fragment" />
</RelativeLayout>
